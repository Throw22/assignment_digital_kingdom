<h2>Lieges' of {{castleName}}</h2>

<div class="box">
  <!-- <div class="box--title">{{kingdoms}}</div> -->
  <div class="box--content">
    {{#each lieges as |liege|}}
    <div class="liege">
      Liege's name: <a href="/kingdoms/{{../kingdomName}}/{{../castleName}}/{{liege.name}}"> {{liege.name}}</a>
      <p># of vassals: {{liege.vassals.length}}</p>
      <!-- <form class="remove" action="/species/{{../species}}/animals/{{animal}}/release" method="post">
        <button>Release</button>
      </form> -->
    </div>
    {{/each}}
  </div>
</div>


<div class="box">
  <div class="box--title">Add Liege</div>
  <div class="box--content">
    <form action="/kingdoms/{{kingdomName}}/{{castleName}}" method="POST">
      <input type="text" name="liegeName" id="liegeName" placeholder="Liege Name">
      <input type="submit" value="Add New Liege" method="post">
    </form>
  </div>
</div>
